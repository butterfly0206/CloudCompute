{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Input definition for test worker in CloudOS Compute",
  "additionalProperties": false,
  "definitions": {
    "TestDefinition": {
      "description": "Defines test behavior",
      "properties": {
        "duration": {
          "description": "duration of time this test runs (in seconds)",
          "type": "integer"
        },
        "progressInterval": {
          "description": "Send progress at this interval (in seconds)",
          "type": "integer"
        },
        "progressUntil": {
          "description": "Progress with normal work until this percent",
          "minimum": 0,
          "maximum": 100,
          "type": "integer"
        },
        "heartbeatInterval": {
          "description": "Send heartbeat at this interval (in seconds)",
          "type": "integer"
        },
        "heartbeatUntil": {
          "description": "Send heartbeat until this time (in seconds)",
          "type": "integer"
        },
        "output": {
          "description": "Output to be generated by this test",
          "type": "object"
        },
        "cpu": {
          "description": "Concurrent CPUs",
          "type": "integer",
          "optional": true
        },
        "memory": {
          "description": "Allocated memory in MB",
          "type": "integer",
          "optional": true
        },
        "hdd": {
          "description": "Hard Disk space in MB",
          "type": "integer",
          "optional": true
        }
      }
    }
  },
  "properties": {
    "testDefinition": {
      "description":"Defines test behavior for worker",
      "$ref": "#/definitions/TestDefinition"
    }
  },
  "required":["testDefinition"]
}
